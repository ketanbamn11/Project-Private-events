<h1>Events</h1>

<% if user_signed_in? %>
  <%= link_to "Sign out", destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to "Sign in", new_user_session_path %>
<% end %>

<ul>
  <% @events.each do |event| %>
    <li>
      <strong><%= event.title %></strong>
      <p><%= event.description %></p>
      <p>Event Date: <%= event.event_date %></p>
    </li><br/><br/>
  <% end %>
</ul>
